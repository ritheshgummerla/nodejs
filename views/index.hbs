<div class="well">
    <h1 style="padding-left: 550px;">Add Person</h1>
</div>
<div class="container">
	<div class="col-md-5">
		<div class="form-area">
			<form action="/one" method="post">
				<br style="clear:both">
				
				<div class="form-group">
					<input type="text" class="form-control" id="name" value="{{docs.name}}" name="name" placeholder="name" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" id="age" value="{{docs.age}}" name="age" placeholder="age" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" id="gender" value="{{docs.gender}}" name="gender" placeholder="gender" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" id="mobile" value="{{docs.mobile}}" name="mobile" placeholder="mobile" required>
				</div>
				<input type="submit" value="Submit">
			</form>
		</div>
	</div>
</div>